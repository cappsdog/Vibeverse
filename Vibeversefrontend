# File: src/pages/Feed.jsx
import { useState } from 'react'
import VibeForm from '../components/VibeForm'
import VibeCard from '../components/VibeCard'

const seed = [
  { id: '1', author: 'Luna', content: 'Grateful for small wins üå±', mood: 'Grateful', likes: 12, comments: 4, createdAt: Date.now()-3600000 },
  { id: '2', author: 'Kai', content: 'Deep focus day. Let‚Äôs go!', mood: 'Focused', likes: 5, comments: 1, createdAt: Date.now()-7200000 },
]

export default function Feed(){
  const [items, setItems] = useState(seed)

  function create({ content, mood, file }){
    const url = file ? URL.createObjectURL(file) : null
    setItems([{ id: crypto.randomUUID(), author: 'You', content, mood, image: url, likes: 0, comments: 0, createdAt: Date.now() }, ...items])
  }

  function like(id){
    setItems(prev => prev.map(v => v.id===id? { ...v, likes: v.likes+1 } : v))
  }

  return (
    <section>
      <VibeForm onCreate={create} />
      {items.map(v => <VibeCard key={v.id} vibe={v} onLike={like} />)}
    </section>
  )
}

