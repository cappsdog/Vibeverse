# File: src/db.js
import mongoose from 'mongoose'

let isConnected = false
export async function connectDB(uri) {
  if (isConnected) return
  mongoose.set('strictQuery', true)
  await mongoose.connect(uri, { dbName: 'vibeverse' })
  isConnected = true
}

